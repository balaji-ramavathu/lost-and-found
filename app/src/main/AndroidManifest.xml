<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ramavathubalaji.lost_found">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main2Activity" />
        <activity android:name=".SignupActivity" />
        <activity
            android:name=".Main22Activity"
            android:label="@string/title_activity_main22"
            android:parentActivityName=".Main2Activity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ramavathubalaji.lost_found.Main2Activity" />
        </activity>
        <activity android:name=".ChangePassword" />
        <activity android:name=".PostActivity" />
        <activity
            android:name=".YourPosts"
            android:label="@string/title_activity_your_posts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".EditPost" />
        <activity android:name=".Reply" />
        <activity android:name=".ChatsActivity"></activity>
    </application>

</manifest>